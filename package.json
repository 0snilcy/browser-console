{
	"name": "browser-console",
	"description": "BrowserConsol extension",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"license": "MIT",
	"engines": {
		"vscode": "^1.32.0"
	},
	"repository": {
		"url": "git@github.com:avocato0/browser-console.git"
	},
	"categories": [
		"Debuggers",
		"Testing",
		"Visualization",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "browser-console.commands",
				"title": "Commands",
				"category": "BrowserConsole"
			},
			{
				"command": "browser-console.stop",
				"title": "Stop",
				"category": "BrowserConsole"
			},
			{
				"command": "browser-console.restart",
				"title": "Restart",
				"category": "BrowserConsole"
			},
			{
				"command": "browser-console.start",
				"title": "Start",
				"category": "BrowserConsole"
			}
		],
		"configuration": {
			"title": "Browser Console",
			"properties": {
				"browserConsole.port": {
					"description": "Port of web-server",
					"type": "number"
				},
				"browserConsole.debug": {
					"description": "Is debug env",
					"type": "boolean",
					"default": false
				},
				"browserConsole.pathToChrome": {
					"description": "Path to Google Chrome dir",
					"type": "string"
				},
				"browserConsole.textColor": {
					"description": "Color of log's decorator\n https://code.visualstudio.com/api/references/theme-color#color-formats",
					"type": "string",
					"default": "#0006"
				}
			}
		},
		"menus": {
			"commandPalette": [
				{
					"command": "browser-console.commands",
					"when": "false"
				}
			]
		},
		"views": {
			"browser-console-panel": [
				{
					"id": "browser-console-view",
					"name": "Browser Console",
					"icon": "assets/img/console.svg",
					"contextualTitle": "Browser Console"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "browser-console-panel",
					"title": "Browser Console",
					"icon": "assets/img/console.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "browser-console-view",
				"contents": "No logs found."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/puppeteer-core": "^2.0.0",
		"@types/sockjs-client": "^1.1.1",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"devtools-protocol": "^0.0.802093",
		"eslint": "^7.1.0",
		"nodemon": "2.0.4",
		"typescript": "^3.9.4"
	},
	"dependencies": {
		"puppeteer-core": "^5.2.1",
		"source-map": "^0.8.0-beta.0"
	},
	"nodemonConfig": {
		"env": {
			"DEBUG": "null"
		},
		"ignore": [
			".git",
			"node_modules/**/node_modules",
			"out/test.js"
		]
	}
}
